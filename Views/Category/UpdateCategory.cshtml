@model CategoryDTO
@{
    
}
<div style="width:50%">
    <h2>Update Category</h2>
    <a asp-action="Index" asp-controller="Category" class="btn btn-primary">Back</a>
    <form asp-action="UpdateCategory" asp-controller="Category" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="my-2">
            <label>Category</label>
            <input type="text" class="form-control" asp-for="CategoryType" />
            <span asp-validation-for="CategoryType" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Update</button>
        </div>
    </form>
</div>
