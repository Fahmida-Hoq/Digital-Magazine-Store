@model IEnumerable<DigitalMagazineStore.Models.DTOs.CategoryDTO>
@{
   
}
<h2>Categories</h2>
<a asp-action="AddCategory" class="btn btn-primary">Add More</a>

<table class="table table-striped my-2">
    <tr>
        <th>Category</th>
        <th>Action</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.CategoryType</td>
            <td>
                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-success">Edit</a>

                <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display:inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
