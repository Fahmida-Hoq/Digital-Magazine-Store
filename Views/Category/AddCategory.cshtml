@model DigitalMagazineStore.Models.DTOs.CategoryDTO
@{
    
}

<div style="width:50%">
    <h2>Add Category</h2>
    <a asp-action="Index" asp-controller="Category" class="btn btn-primary">Back</a>

    <form asp-action="AddCategory" method="post">
        <div class="my-2">
            <label>Category</label>
            <input type="text" class="form-control" asp-for="CategoryType" />
            <span asp-validation-for="CategoryType" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Add</button>
        </div>
    </form>
</div>
