@using Microsoft.AspNetCore.Identity
@using DigitalMagazineStore.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="dropdown">
        <a class="text-white text-decoration-none dropdown-toggle d-flex align-items-center" href="#" id="userMenu"
           role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle fs-4 me-1"></i>
            <span id="username">@User.Identity?.Name</span>
        </a>

        <ul class="dropdown-menu dropdown-menu-end shadow-lg mt-2" aria-labelledby="userMenu">
            <li><a class="dropdown-item" href="/Identity/Account/Manage"><i class="bi bi-gear"></i> Account Settings</a></li>
            <li><a class="dropdown-item" href="/Cart/Index"><i class="bi bi-cart-check"></i> My Cart</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                      method="post" class="d-inline">
                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right"></i> Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <div class="d-flex align-items-center">
        <a href="/Identity/Account/Login" class="btn btn-outline-light me-2">
            <i class="bi bi-box-arrow-in-right"></i> Login
        </a>
        <a href="/Identity/Account/Register" class="btn btn-warning text-dark fw-semibold">
            <i class="bi bi-person-plus"></i> Register
        </a>
    </div>
}
