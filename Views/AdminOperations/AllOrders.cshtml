@model IEnumerable<Order>
@{
    
	
    ViewData["Title"] = "AllOrders";
}

<div style="width:100%" class="mt-2">

    <h4> Orders</h4>
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>OrderDate</th>
				<th>Name</th>
				<th>MobileNumber</th>
                <th>Email</th>                
                <th>Address</th>
                <th>Payment Method</th>
                <th>Payment Status</th>
                <th>OrderStatus</th>
                <th>Actions</th>
                </tr>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CreatedDate.ToString("dd-MM-yyyy")</td>
                    <td>@order.Name</td>
                    <td>@order.MobileNumber</td>
                    <td>@order.Email</td>
                    <td>@order.Address</td>
                    <td>@order.PaymentMethod</td>
                    <td>
                        @(
                                        order.PaymentMethod == "COD"
                                        ? "Not Paid"
                                        : (order.IsPaid ? " Not Paid" : "Paid")
                                        )
                </td>

                <td>@(order.OrderStatus?.StatusName ?? "Pending")</td>
                <td>
                <button type="button" data-bs-toggle="modal" data-bs-target="#model-@order.Id" class="btn btn-primary">
                            Order-Detail
                        </button>

                        <a asp-action="UpdateOrderStatus" asp-route-orderId="@order.Id" class="btn btn-info">
                            Change Order Status
                        </a>

                    <a asp-action="TogglePaymentStatus" asp-route-orderId="@order.Id" class="btn btn-info">Toggle Payment Status</a>
             
                    @*  appending model div here *@
                    @await Html.PartialAsync("/Views/AdminOperations/_OrderDetailModel.cshtml" ,
                    new OrderDetailModelDTO{DivId=order.Id.ToString(),OrderDetail=order.OrderDetail})

                </td>
            </tr>
                }

                


            
            </table>
    }
        else
        {
        <h5>No orders</h5>
        }
</div>

